<?xml version="1.0"?>
<transfers
    xmlns="spryker:databuilder-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:databuilder-01 http://static.spryker.com/databuilder-01.xsd"
>

    <transfer name="ProductOfferValidity">
        <property name="idProductOffer" dataBuilderRule="=1" type="int"/>
        <property name="validFrom" dataBuilderRule="time('Y-m-d H:i:s', '-1 days')" type="string"/>
        <property name="validTo" dataBuilderRule="time('Y-m-d H:i:s', '+1 days')" type="string"/>
    </transfer>

</transfers>
